@model LLServer.Gacha.Database.GachaCard[]

<table class="table">
    <tr>
        <th>Name</th>
        <th>Id</th>
        <th>Character IDs</th>
        <th>Rarity IDs</th>
        <th></th>
    </tr>
        
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.Partial("_CharacterIconView", item.characterIdBools)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.rarityIds)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditCard", "GachaCardEditor", new { item.id }, new { @class = "btn" })
                @Html.ActionLink("Delete", "DeleteCard", "GachaCardEditor", new { item.id }, new { @class = "btn" })
            </td>
        </tr>
    }
</table>
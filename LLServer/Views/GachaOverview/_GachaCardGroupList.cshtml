@model LLServer.Gacha.Database.GachaCardGroup[]

<table class="table">
    <tr>
        <th>Name</th>
        <th>Card Count</th>
        <th></th>
    </tr>
        
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                <span>@(item.cardIds.Length > 0 ? item.cardIds.Length : "none")</span>
            </td>
            <td>
                @Html.ActionLink("Edit", "EditGroup", "GachaGroupEditor", new { item.id }, new { @class = "btn" })
                @Html.ActionLink("Delete", "DeleteGroup", "GachaGroupEditor", new { item.id }, new { @class = "btn" })
            </td>
        </tr>
    }
</table>
@{
    ViewData["Title"] = "Select Path";
    Layout = "../_Layout.cshtml";
}

<h2>Select Path</h2>

<form asp-action="CreateResource" method="post">
    <div class="form-group">
        <label class="control-label">Select Path:</label>
        <div>
            @foreach (var path in ViewBag.Paths)
            {
                <div class="form-check">
                    <input type="radio" name="path" value="@path" class="form-check-input" />
                    <label class="form-check-label">@path</label>
                </div>
            }
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Next</button>
    </div>
</form>